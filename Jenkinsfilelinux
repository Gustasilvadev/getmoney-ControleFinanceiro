pipeline {
    agent any
    stages {
        stage('Verificar Repositório') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], useRemoteConfigs: [[url: 'https://github.com/Gustasilvadev/getmoney-ControleFinanceiro']]])
            }
        }

        stage('Construir APK React Native') {
            agent {
                docker {
                    image 'node:18-alpine'
                }
            }
            steps {
                script {
                    // Instalar dependências do projeto
                    sh 'npm install'
                    
                    // Instalar dependências Android
                    sh 'cd android && ./gradlew dependencies || true'
                    
                    // Gerar APK
                    sh 'cd android && ./gradlew assembleRelease -PreactNativeArchitectures=arm64-v8a'
                    
                    // Criar diretório e copiar APK
                    sh 'mkdir -p apk'
                    sh 'cp android/app/build/outputs/apk/release/app-release.apk apk/getmoney.apk'
                    
                    // Verificar se o APK foi gerado
                    sh 'ls -la apk/'
                }
            }
        }


        stage('Instalar Dependências') {
            steps {
                script {
                    env.PATH = "/usr/bin:$PATH"

                     dir('getmoneyBackend') {
                        sh 'mvn clean install'
                     }

                }
            }
        }

        stage('Construir Imagem Docker') {
            steps {
                script {
                    def appName = 'getmoney'
                    def imageTag = "${appName}:${env.BUILD_ID}"

                    dir('getmoneyBackend') {
                      sh "docker build -t ${imageTag} ."
                    }

                }
            }
        }

        stage('Fazer Deploy') {
            steps {
                script {
                    def appName = 'getmoney'
                    def imageTag = "${appName}:${env.BUILD_ID}"

                    // Para e remove container existente, se houver
                    sh "docker stop ${appName} || exit 0"
                    sh "docker rm -v ${appName} || exit 0"

                    // Executar o novo container
                    sh "docker run -d --name ${appName} -p 8401:8401 ${imageTag}"

                }
            }
        }
    }

    post {
        success {
            echo 'Deploy realizado com sucesso!'
        }
        failure {
            echo 'Houve um erro durante o deploy.'
        }
    }
}