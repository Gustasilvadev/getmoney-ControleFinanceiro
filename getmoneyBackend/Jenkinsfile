pipeline {
    agent any
    stages {
        stage('Verificar Repositório') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], useRemoteConfigs: [[url: 'https://github.com/Gustasilvadev/getmoney-ControleFinanceiro']]])
            }
        }

        stage('Instalar Dependências') {
            steps {
                script {
                    // Atualiza o PATH se necessário
                    env.PATH = "${env.MAVEN_HOME}\\bin;%PATH%"
                    // Instalar as dependências Maven antes de compilar o projeto
                    // bat 'mvn clean install'  // Instala as dependências do Maven

                    dir('getmoneyBackend') {
                        // Instalar as dependências Maven antes de compilar o projeto
                        bat 'mvn clean install'
                    }
                }
            }
        }

        stage('Construir Imagem Docker') {
            steps {
                script {
                    def appName = 'getmoney'
                    def imageTag = "${appName}:${env.BUILD_ID}"

                    dir('getmoneyBackend') {
                        bat "docker build -t ${imageTag} ."
                    }
                }
            }
        }

         stage('Fazer Deploy') {
                     steps {
                         script {
                             def appName = 'getmoney'
                             def imageTag = "${appName}:${env.BUILD_ID}"

                             // Parar e remover o container existente, se houver
                             bat "docker stop ${appName} || exit 0"
                             bat "docker rm -v ${appName} || exit 0"

                             // bat "docker run -d --name ${appName} -p 8080:8080 ${imageTag}"
                         }
                     }
                 }
             }

             post {
                 success {
                     echo 'Deploy realizado com sucesso!'
                 }
                 failure {
                     echo 'Houve um erro durante o deploy.'
                 }
             }
         }